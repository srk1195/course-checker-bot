{
  "env": {
    "node": true,
    "commonjs": true,
    "es2020": true
  },
  "extends": ["airbnb-base", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "max-len": ["error", { "code": 80 }],
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "comma-dangle": "off",
    "linebreak-style": 0,
    "object-curly-newline": "off",
    "no-underscore-dangle": "off"
  }
}
